<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/tts_settings_title"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res-auto">
    <com.oneplus.settings.ui.OPPreferenceHeaderMargin android:key="preference_divider_line" android:order="-300" />
    <com.android.settings.widget.GearPreference android:title="@string/tts_engine_preference_title" android:key="tts_engine_preference" android:fragment="com.android.settings.tts.TtsEnginePreferenceFragment" />
    <ListPreference android:persistent="false" android:title="@string/tts_default_lang_title" android:key="tts_default_lang" android:summary="@string/tts_default_lang_summary" />
    <PreferenceCategory android:key="tts_general_section">
        <com.android.settings.widget.SeekBarPreference android:max="600" android:title="@string/tts_default_rate_title" android:key="tts_default_rate" android:summary="@string/tts_default_rate_summary" android:defaultValue="50" android:iconSpaceReserved="false" />
        <com.android.settings.widget.SeekBarPreference android:max="400" android:title="@string/tts_default_pitch_title" android:key="tts_default_pitch" android:summary="@string/tts_default_pitch_summary" android:defaultValue="100" android:iconSpaceReserved="false" />
        <com.android.settingslib.widget.ActionButtonsPreference android:key="action_buttons" />
    </PreferenceCategory>
</PreferenceScreen>