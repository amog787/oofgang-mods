    <SwitchPreference android:persistent="false" android:title="@string/oneplus_hide_navkeys" android:key="hide_navkeys" android:summary="@string/oneplus_hide_navkeys_summary" settings:keywords="@string/oneplus_search_keyword_hide_navkeys" />
    <PreferenceCategory android:title="@string/hardware_keys_home_key_title" android:key="home_key" settings:keywords="@string/oneplus_search_keyword_home_key">
